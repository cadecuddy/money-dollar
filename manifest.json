{
  "manifest_version": 3,
  "name": "money dollar",
  "version": "1.0.0",
  "description": "removes monetary suffixes to make large numbers small",
  "icons": {
    "16": "assets/favicon-16x16.png",
    "32": "assets/favicon-32x32.png",
    "48": "assets/favicon-32x32.png",
    "128": "assets/android-chrome-192x192.png",
    "192": "assets/android-chrome-192x192.png",
    "512": "assets/android-chrome-512x512.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": "assets/active.png",
    "default_title": "money dollar",
    "default_popup": "toggle.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

