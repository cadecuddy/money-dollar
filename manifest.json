{
  "manifest_version": 3,
  "name": "money dollar",
  "version": "1.0.0",
  "description": "Removes money suffixes to make large transactions hilariously small (e.g., $12 million â†’ $12)",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/favicon-32x32.png",
    "128": "icons/android-chrome-192x192.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

